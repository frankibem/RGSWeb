@model IEnumerable<RGSWeb.Models.Announcement>

<h3>@ViewBag.Title</h3>

<p>
    @Html.ActionLink("Create a new announcement", "Create", new { classId = ViewBag.ClassId }, new { @class = "btn btn-default" })
</p>

@if(Model.Count() == 0)
{
    <p>No announcements to show</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>
                            @{ var title = string.Format("{0}{1}", item.Title.Substring(0, Math.Min(item.Title.Length, 30)), item.Title.Length > 30 ? "..." : "");}
                            @Html.ActionLink(title, "Details", new { id = item.Id })
                        </td>
                        <td>
                            @string.Format("{0}{1}", item.Description.Substring(0, Math.Min(item.Description.Length, 60)), item.Description.Length > 60 ? "..." : "")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}