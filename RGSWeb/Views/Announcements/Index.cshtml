@model IEnumerable<RGSWeb.Models.Announcement>

@{
    ViewBag.Title = "Announcements";
}

<h3>List of Announcements</h3>

<p>
    @Html.ActionLink("Create a new announcement", "Create", null, new { @class = "btn btn-default" })
</p>

<div class="table-responsive">
    <table class="table table-hover table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th></th>
        </tr>

        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @string.Format("{0}{1}", item.Title.Substring(0, Math.Min(item.Title.Length, 30)), item.Title.Length > 30 ? "..." : "")
                </td>
                <td>
                    @string.Format("{0}{1}", item.Description.Substring(0, Math.Min(item.Description.Length, 60)), item.Description.Length > 60 ? "..." : "")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
                        }
    </table>
</div>